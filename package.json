{
  "name": "@zthun/roadblock",
  "version": "0.0.0",
  "description": "A micro application that handles token based authentication for zthun scoped domain apps.",
  "author": "Anthony Bonta",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/roadblock"
  },
  "workspaces": [
    "packages/roadblock.core",
    "packages/roadblock.api",
    "packages/roadblock.proxy",
    "packages/roadblock.web"
  ],
  "scripts": {
    "clean": "rimraf dist docs reports *.tgz *.log packages/**/dist packages/**/docs packages/**/*.tgz packages/**/*.log",
    "test": "jest --coverage --runInBand",
    "lint": "lint-janitor",
    "build": "lerna run build",
    "make": "npm run clean && npm run lint && npm test && npm run build",
    "docker:publish": "lerna run docker:publish",
    "docker:build": "lerna run docker:build",
    "docker": "npm run docker:build && npm run docker:publish",
    "prepare": "husky install",
    "release": "npm run make && lerna publish --conventional-commits -m \"chore: publish [skip ci]\""
  },
