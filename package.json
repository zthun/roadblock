{
  "name": "@zthun/roadblock",
  "version": "0.0.0",
  "description": "A micro application that handles token based authentication for zthun scoped domain apps.",
  "author": "Anthony Bonta",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/roadblock"
  },
  "workspaces": [
    "packages/roadblock.api",
    "packages/roadblock.proxy",
    "packages/roadblock.web"
  ],
  "scripts": {
    "clean": "rimraf dist docs reports *.tgz *.log packages/**/dist packages/**/docs packages/**/*.tgz packages/**/*.log",
    "test": "jest --coverage --runInBand",
    "lint": "lint-janitor",
    "build": "lerna run build",
    "make": "yarn clean && yarn lint && yarn test && yarn build",
    "docker:publish": "lerna run docker:publish",
    "docker:build": "lerna run docker:build",
    "docker": "yarn docker:build && yarn docker:publish",
    "prepare": "husky install",
    "release:publish": "lerna publish --conventional-commits -m \"chore: publish [skip ci]\"",
    "release": "yarn make && yarn release:publish"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/jsdom": "^16.2.14",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.2",
    "@types/uuid": "^8.3.3",
    "@zthun/lint-janitor": "^11.1.0",
    "@zthun/lint-janitor-config": "^11.1.1",
    "@zthun/works.jest": "^3.0.0",
    "eslint": "^8.5.0",
    "eslint-plugin-react": "^7.28.0",
    "favicons": "^6.2.2",
    "favicons-webpack-plugin": "^5.0.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "htmlhint": "^1.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jsdom": "^19.0.0",
    "lerna": "^4.0.0",
    "nodemon": "^2.0.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.1"
  }
}
